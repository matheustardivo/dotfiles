[core]
	pager = less -r
	editor = mvim -f --nomru -c 'au VimLeave * !open -a iTerm'
[color]
	diff = auto
	status = auto
	branch = auto
	ui = true
[alias]
	sh = !git-sh
	ci = commit
	co = checkout
	b = branch
	st = status
	who = shortlog -s --
	fl = log -p
	lg = log --oneline --decorate
	sb = status -sb
	dw = diff --word-diff
[help]
	autocorrect = 1
[branch]
	autosetuprebase = always
[push]
	default = current
